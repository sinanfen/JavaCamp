package javaOdev_2;

public class StudentManager {

	public void addStudent(Student ogrenci) {
		 System.out.println("Öðrenci eklendi."
	                + "\nId: " + ogrenci.id
	                + "\nAdý Soyadý: " + ogrenci.firstName + " " + ogrenci.lastName
	                + "\nÖðrencinin eðitmeni:" + ogrenci.ogrInstructor.firstName + " " + ogrenci.ogrInstructor.lastName);
	}
	
	public void updateStudent(Student ogrenci) {
		 System.out.println("Öðrenci güncellendi."
	                + "\nId: " + ogrenci.id
	                + "\nAdý Soyadý: " + ogrenci.firstName + " " + ogrenci.lastName
	                + "\nÖðrencinin eðitmeni:" + ogrenci.ogrInstructor.firstName + " " + ogrenci.ogrInstructor.lastName);
	}
	
	public void deleteStudent(Student ogrenci) {
		 System.out.println("Öðrenci silindi."
	                + "\nId: " + ogrenci.id
	                + "\nAdý Soyadý: " + ogrenci.firstName + " " + ogrenci.lastName
	                + "\nÖðrencinin eðitmeni: " + ogrenci.ogrInstructor.firstName + " " + ogrenci.ogrInstructor.lastName);
	}
}
